<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <script src="/java.js" type="module"></script>
  <title>Course Management</title>
</head>
<header>
  <button class="menu-btn open" id="open-menu"  aria-label="Open Menu">
    <span class="menu-icon">
        <span class="bars"></span>
        <span class="bars"></span>
        <span class="bars"></span>
    </span>
</button>
<nav id="nav-menu">
    <button class="menu-btn close" id="close-menu">
        <span>X</span>
    </button>
    
    <ul>
        
        <li><a href="/index"> COURSES</a></li>
        <li><a href="/add"> ADD COURSE</a></li>
        <li><a href="/about"> ABOUT </a></li>
    </ul>
</nav>
</header>
  <h1>Courses</h1>
  <ul class="courses">
    <% courses.forEach(course => { %>
      <li>
        <p>Course Name: <%= course.coursename %></p>
        <p>Course Code: <%= course.coursecode %></p>
        <p>Syllabus: <%= course.syllabus %></p>
        <p>Progression: <%= course.progression %></p>
        
        <a href="/delete/<%= course.id %>">Delete</a>
      </li>
    <% }); %>
  </ul>

  <a href="/add">Add Course</a>
</body>
</html>
